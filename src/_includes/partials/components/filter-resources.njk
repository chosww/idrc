<div class="filter">
    <h2>Filters</h2>
    {# Topic selections #}
    {% set filterIconId = "#topic" %}
    {% set filterTitle = "Topic" %}
    {% set filterType = "topics" %}
    {% include 'partials/components/filter-resources-header.njk' %}

    <div class="filter-section" id="filterBody-topics">
        <fieldset>
        <legend class="visually-hidden">{{ filterTitle }}</legend>
        <ul>
            {% for topic in resourceTopics.resourceTopics %}
                <li>
                    <input class="filter-checkbox" type="checkbox" data-filter="topics" id="{{ topic.value }}" name="{{ 'to_' + topic.value }}">
                    <label for="{{ topic.value }}">{{ topic.label }}</label>
                </li>
            {% endfor %}
        </ul>
        </fieldset>
    </div>

    {# Type selections #}
    {% set filterIconId = "#type" %}
    {% set filterTitle = "Type" %}
    {% set filterType = "types" %}
    {% include 'partials/components/filter-resources-header.njk' %}

    <div class="filter-section" id="filterBody-types">
        <fieldset>
        <legend class="visually-hidden">{{ filterTitle }}</legend>
        <ul>
            {% for type in resourceTypes.resourceTypes %}
                <li>
                    <input class="filter-checkbox" type="checkbox" data-filter="types" id="{{ type.value }}" name="{{ 'ty_' + type.value }}">
                    <label for="{{ type.value }}">{{ type.label }}</label>
                </li>
            {% endfor %}
        </ul>
        </fieldset>
    </div>

    <div class="filter-buttons">
        <button class="apply-button" type="submit">Apply filter</button>
    </div>
</div>
