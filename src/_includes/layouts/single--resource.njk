{% if previewMode %}
    {% extends 'layouts/preview.njk' %}
{% else %}
    {% extends 'layouts/base.njk' %}
{% endif %}

{% set pageType = 'single page--resources' %}

{% block content %}
    <div class="card">
        <div class="card-image">
        </div>
        <h3 class="card-title">
            {{ title | safe }}
        </h3>
        <div class="card-tags">
            {% if topics.length > 0 %}
                {% for topic in topics %}
                    <div class="card-tag">
                        {{ topic | getResourceMetadataLabel('topics') | safe }}
                    </div>
                {% endfor %}
            {% endif %}
            {% if types.length > 0 %}
                {% for type in types %}
                    <div class="card-tag">
                        {{ type | getResourceMetadataLabel('types') | safe }}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        <div class="card-description">
            <p>
                {{ description | markdown | safe }}
            </p>
        </div>
        <div class="card-link"><a rel="external">Visit resource</a></div>
    </div>
{% endblock %}

{{ content | safe }}
